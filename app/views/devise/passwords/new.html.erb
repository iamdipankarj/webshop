<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "w-full mb-6 space-y-3 flex flex-col justify-center" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-input" %>

  <%= f.submit "Send me reset password instructions", class: "ring-offset-background focus-visible:ring-ring flex h-10 w-full items-center justify-center whitespace-nowrap rounded-md bg-black px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-black/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50" %>
  
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "inline-flex cursor-pointer items-center relative text-gray-10 dark:text-gray-dark-10 p-[1px] transition hover:text-gray-11 dark:hover:text-gray-dark-11 font-semibold whitespace-nowrap focus:outline-none focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-primary-5 dark:focus-visible:ring-primary-dark-5 text-sm w-auto justify-center gap-1.5 underline text-center" %><br />
  <% end %>
<% end %>

